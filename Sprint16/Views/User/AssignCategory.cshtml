@model Sprint16.ViewModels.UserCategoryViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.UserId, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.UserId, new SelectList("UserId", "UserName"), "Select User")
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedCategory, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.SelectedCategory, Model.Categories)
    </div>

    <input type="submit" value="Assign Category" class="btn btn-default" />
}